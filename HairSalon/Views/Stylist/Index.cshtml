@{
Layout = "_Layout";
}
@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>

<h1>Stylists</h1>

@if (Model.Count == 0)
{
  <h3>there are no available stylists! People just don't <em>Want</em> to work anymore</h3>
}

@foreach (Stylist stylist in Model)
{
  <p>@Html.ActionLink($"{stylist.Name}", "Details", new {id = stylist.StylistId})</p>
}

<p>@Html.ActionLink("Add Stylist", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>